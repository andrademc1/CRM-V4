
<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bookmakers - CRM</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="dashboard-container">
    <header class="main-header">
      <div class="logo">
        <h1>CRM Sistema</h1>
      </div>
      <div class="user-info">
        <span>Bem-vindo, <%= usuario.nome %></span>
        <a href="/logout" class="btn btn-small">Sair</a>
      </div>
    </header>

    <div class="dashboard-content">
      <aside class="sidebar">
        <nav>
          <ul>
            <li><a href="/dashboard">Dashboard</a></li>
            <li class="active"><a href="/bookmakers">Bookmakers</a></li>
            <li><a href="/users">Users</a></li>
          </ul>
        </nav>
      </aside>

      <main class="main-content">
        <div class="page-header">
          <h2>Gestão de Owners</h2>
          <a href="/bookmakers/adicionar-owner" class="btn btn-primary">Add Owner</a>
        </div>
        
        <% if (mensagem) { %>
          <div class="alert alert-<%= mensagem.tipo %>">
            <%= mensagem.texto %>
          </div>
        <% } %>
        
        <div class="recent-section">
          <h3>Lista de Owners</h3>
          
          <table class="data-table">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Empresa</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% if (owners && owners.length > 0) { %>
                <% owners.forEach(owner => { %>
                  <tr>
                    <td><%= owner.nome %></td>
                    <td><%= owner.email %></td>
                    <td><%= owner.telefone %></td>
                    <td><%= owner.empresa %></td>
                    <td>
                      <a href="/bookmakers/editar-owner/<%= owner.id %>" class="btn btn-small">Editar</a>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="5">Nenhum owner cadastrado.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </main>
    </div>
  </div>
</body>
</html>
